                "emit_swim": false
            }
        },
        "events": {
            "spawn_muerte": {
                "add": {
                    "component_groups": [
                        "la_muerte"
                    ]
                }
            },
            "spawn_phantoms": {
                "add": {
                    "component_groups": [
                        "spawn_phantoms"
                    ]
                }
            },
            "minecraft:add_damage_timer": {
                "add": {
                    "component_groups": [
